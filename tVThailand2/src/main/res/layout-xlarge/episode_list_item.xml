<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/label_ep_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/media_thumnail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true" 
                android:contentDescription="@null"
                android:src="@drawable/ic_player" >
            </ImageView>

            <TextView
                android:id="@+id/tv_label_ep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/media_thumnail"
                android:text="@string/episode"
                android:textColor="#33B5E5"
                android:textSize="24sp" >
            </TextView>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_on_air_ep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_ep_ll"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/aired"
            android:textColor="#e5e5e5e5"
            android:textSize="20sp" >
        </TextView>

        <LinearLayout
            android:id="@+id/view_count_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_on_air_ep"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/view_count_ep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/views"
                android:textColor="#858585"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:text="@string/views"
                android:textColor="#858585"
                android:textSize="16sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/view_count_ll"
            android:contentDescription="@null" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/part_updated_ll"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="1dp"
        android:visibility="visible" >

        <TextView
            android:id="@+id/num_part"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#cccccc"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/parts"
            android:textColor="#353535"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#353535"
            android:gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="@string/parts"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>