<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makathon.tvthailand"
    android:installLocation="auto"
    android:versionCode="105"
    android:versionName="2.4.0">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name=".TVThailandApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:theme="@style/TVThailandTheme">
        <activity
            android:name="com.makathon.tvthailand.MainActivity"
            android:configChanges="screenSize|keyboardHidden"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value="com.makathon.tvthailand.SearchProgramActivity" />
        </activity>
        <activity
            android:name="com.makathon.tvthailand.SearchProgramActivity"
            android:label="Search"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            ï¿¼
        </activity>
        <activity android:name="com.makathon.tvthailand.ProfileFragmentActivity"></activity>
        <activity
            android:name="com.makathon.tvthailand.ProgramActivity"
            android:label="Program"></activity>
        <activity
            android:name="com.makathon.tvthailand.EpisodeActivity"
            android:label="Detail"></activity>
        <activity
            android:name="com.makathon.tvthailand.MoreDetailActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Full Detail"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name="com.makathon.tvthailand.RatingActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name="com.makathon.tvthailand.PartActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:label="Parts"></activity>
        <activity
            android:name="com.makathon.tvthailand.LargeThumbnailActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"></activity>
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity
            android:name="com.makathon.tvthailand.player.VideoPlayerActivity"
            android:label="TV Thailand Player"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />

                <data android:mimeType="video/*" />
                <data android:mimeType="application/sdp" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="http" />
                <data android:mimeType="video/*" />
            </intent-filter>

        </activity>
        <activity
            android:name="com.makathon.tvthailand.player.RadioPlayerActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:label="TV Thailand Player"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name="com.makathon.tvthailand.ProgramLoaderActivity"
            android:label="My Favorites"></activity>
        <activity
            android:name="com.makathon.tvthailand.AboutActivity"
            android:label="About"></activity>
        <activity
            android:name="com.makathon.tvthailand.player.VastPlayerActivity"
            android:label="VAST Player"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity
            android:name="com.makathon.tvthailand.player.VitamioVastPlayerActivity"
            android:label="VAST Player"
            android:launchMode="singleTop"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
        <activity
            android:name="com.makathon.tvthailand.PartYoutubePlayerViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden" />
        <activity
            android:name="com.makathon.tvthailand.player.YoutubePlayerViewActivity"
            android:configChanges="orientation|screenSize|keyboardHidden"
            android:screenOrientation="landscape" />

        <!-- TV Thailand Account -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name="com.facebook.LoginActivity"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"></activity>
        <activity android:name="com.makathon.tvthailand.GooglePlusActivity"></activity>
        <activity
            android:name="com.makathon.tvthailand.account.AccountActivity"
            android:screenOrientation="portrait" />

        <!-- OTV -->
        <activity
            android:name="com.makathon.tvthailand.otv.OTVShowActivity"
            android:label="OTV Show"></activity>
        <activity
            android:name="com.makathon.tvthailand.otv.OTVShowListActivity"
            android:label="OTV Show"></activity>
        <activity
            android:name="com.makathon.tvthailand.otv.OTVShowDetailActivity"
            android:label="OTV Show Detail"></activity>
        <activity
            android:name="com.makathon.tvthailand.otv.OTVPartActivity"
            android:label="OTV Part"></activity>

        <provider
            android:name="com.makathon.tvthailand.contentprovider.ProgramSuggestionProvider"
            android:authorities="com.makathon.tvthailand.contentprovider.ProgramSuggestionProvider"
            android:exported="false"></provider>
        <provider
            android:name="com.makathon.tvthailand.contentprovider.ProgramContentProvider"
            android:authorities="com.makathon.tvthailand.contentprovider.ProgramContentProvider"
            android:exported="false"></provider>
        <provider
            android:name="com.makathon.tvthailand.contentprovider.WhatsNewContentProvider"
            android:authorities="com.makathon.tvthailand.contentprovider.WhatsNewContentProvider"
            android:exported="false"></provider>
        <provider
            android:name="com.makathon.tvthailand.contentprovider.MyProgramContentProvider"
            android:authorities="com.makathon.tvthailand.contentprovider.MyProgramContentProvider"
            android:exported="false"></provider>
        <provider
            android:name="com.makathon.tvthailand.contentprovider.EpisodeContentProvider"
            android:authorities="com.makathon.tvthailand.contentprovider.EpisodeContentProvider"
            android:exported="false"></provider>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="mobi.vserv.android.ads.VservAdManager"
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize"
            android:launchMode="singleTop"
            android:process=":vserv"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="mobi.vserv.org.ormma.view.Browser"
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity
            android:name="mobi.vserv.org.ormma.view.OrmmaActionHandler"
            android:configChanges="touchscreen|keyboard|keyboardHidden|navigation|orientation|screenLayout|uiMode|screenSize"
            android:windowSoftInputMode="adjustPan"></activity>
    </application>

</manifest>